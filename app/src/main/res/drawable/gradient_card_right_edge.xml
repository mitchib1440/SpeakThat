<?xml version="1.0" encoding="utf-8"?>
<!-- Light mode: Purple brand with right-edge black gradient -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Purple_200 brand base background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/purple_200" />
            <corners android:radius="12dp" />
        </shape>
    </item>
    
    <!-- Black gradient at right edge (same positioning as dark mode) -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:centerX="0.85"
                android:centerY="0.5"
                android:gradientRadius="180dp"
                android:startColor="@color/black_overlay_25"
                android:endColor="@color/transparent" />
            <corners android:radius="12dp" />
        </shape>
    </item>
</layer-list>