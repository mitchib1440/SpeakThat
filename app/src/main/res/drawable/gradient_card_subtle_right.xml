<?xml version="1.0" encoding="utf-8"?>
<!-- Light mode: Purple brand with subtle black gradient overlay -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Purple_200 brand base background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/purple_200" />
            <corners android:radius="12dp" />
        </shape>
    </item>
    
    <!-- Flipped gradient: darker on left, lighter towards right -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:startX="0"
                android:startY="0.5"
                android:endX="1"
                android:endY="0.5"
                android:startColor="@color/black_overlay_15"
                android:endColor="@color/transparent" />
            <corners android:radius="12dp" />
        </shape>
    </item>
</layer-list>