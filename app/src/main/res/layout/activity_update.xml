<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorBackground"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:paddingTop="48dp">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/update_checker"
            android:textAppearance="?attr/textAppearanceHeadlineMedium"
            android:textColor="?attr/colorOnBackground"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Status Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="@android:color/transparent"
            app:strokeWidth="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:background="@drawable/gradient_card_subtle_right">

                <!-- Status Text -->
                <TextView
                    android:id="@+id/textStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/checking_for_updates"
                    android:textAppearance="?attr/textAppearanceBodyLarge"
                    android:textColor="@color/purple_card_text_primary"
                    android:gravity="center"
                    android:layout_marginBottom="16dp" />

                <!-- Progress Bar -->
                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:progressTint="@color/white_100"
                    android:progressBackgroundTint="@color/white_200" />

                <!-- Update Info -->
                <TextView
                    android:id="@+id/textUpdateInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/app_up_to_date"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textColor="@color/purple_card_text_secondary"
                    android:gravity="center" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:spacing="12dp">

            <!-- Download Button -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="@drawable/gradient_card_subtle_right">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonDownload"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/download_update"
                    android:visibility="gone"
                    android:background="@android:color/transparent"
                    android:textColor="@color/white_100"
                    app:icon="@drawable/ic_file_upload_24"
                    app:iconTint="@color/white_100"
                    style="@style/Widget.Material3.Button.TextButton" />

            </FrameLayout>

            <!-- Install Button -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="@drawable/gradient_card_subtle_right">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonInstall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/install_update"
                    android:visibility="gone"
                    android:background="@android:color/transparent"
                    android:textColor="@color/white_100"
                    app:icon="@drawable/ic_play_arrow_24"
                    app:iconTint="@color/white_100"
                    style="@style/Widget.Material3.Button.TextButton" />

            </FrameLayout>

            <!-- View Release Notes Button -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="@drawable/gradient_card_subtle_right">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonViewReleaseNotes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/view_release_notes"
                    android:visibility="gone"
                    android:background="@android:color/transparent"
                    android:textColor="@color/white_100"
                    app:icon="@drawable/ic_info_24"
                    app:iconTint="@color/white_100"
                    style="@style/Widget.Material3.Button.TextButton" />

            </FrameLayout>

            <!-- Check Again Button -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="@drawable/gradient_card_subtle_right">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonCheckAgain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/check_again"
                    android:visibility="gone"
                    android:background="@android:color/transparent"
                    android:textColor="@color/white_100"
                    app:icon="@drawable/ic_refresh_24"
                    app:iconTint="@color/white_100"
                    style="@style/Widget.Material3.Button.TextButton" />

            </FrameLayout>

        </LinearLayout>

        <!-- Privacy Notice -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/update_privacy_notice"
            android:textAppearance="?attr/textAppearanceBodySmall"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:gravity="center"
            android:layout_marginTop="24dp"
            android:padding="16dp" />

    </LinearLayout>

</ScrollView> 