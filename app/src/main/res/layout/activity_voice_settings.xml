<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/colorBackground"
    android:fitsSystemWindows="true"
    tools:context=".VoiceSettingsActivity">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Speech Rate & Pitch Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:background="@drawable/gradient_card_subtle_right">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="🔊 Voice Characteristics"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/purple_card_text_primary"
                        android:layout_marginBottom="12dp" />

                    <!-- Speech Rate Section -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Speech Rate"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"
                        android:textColor="@color/purple_card_text_primary" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.1x"
                            android:textSize="12sp"
                            android:textColor="@color/purple_card_text_secondary" />

                        <SeekBar
                            android:id="@+id/speechRateSeekBar"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginHorizontal="8dp"
                            android:max="290"
                            android:progress="90"
                            android:progressTint="@color/white_100"
                            android:thumbTint="@color/white_100"
                            android:progressBackgroundTint="@color/white_200" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3.0x"
                            android:textSize="12sp"
                            android:textColor="@color/purple_card_text_secondary" />

                        <TextView
                            android:id="@+id/speechRateValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1.0x"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginStart="12dp"
                            android:minWidth="40dp"
                            android:gravity="center"
                            android:textColor="@color/white_100" />

                    </LinearLayout>

                    <!-- Pitch Section -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Voice Pitch"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"
                        android:textColor="@color/purple_card_text_primary" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.1x"
                            android:textSize="12sp"
                            android:textColor="@color/purple_card_text_secondary" />

                        <SeekBar
                            android:id="@+id/pitchSeekBar"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginHorizontal="8dp"
                            android:max="190"
                            android:progress="90"
                            android:progressTint="@color/white_100"
                            android:thumbTint="@color/white_100"
                            android:progressBackgroundTint="@color/white_200" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2.0x"
                            android:textSize="12sp"
                            android:textColor="@color/purple_card_text_secondary" />

                        <TextView
                            android:id="@+id/pitchValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1.0x"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginStart="12dp"
                            android:minWidth="40dp"
                            android:gravity="center"
                            android:textColor="@color/white_100" />

                    </LinearLayout>

                    <!-- TTS Volume Section -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="TTS Volume"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"
                        android:textColor="@color/purple_card_text_primary" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0%"
                            android:textSize="12sp"
                            android:textColor="@color/purple_card_text_secondary" />

                        <SeekBar
                            android:id="@+id/ttsVolumeSeekBar"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginHorizontal="8dp"
                            android:max="100"
                            android:progress="100"
                            android:progressTint="@color/white_100"
                            android:thumbTint="@color/white_100"
                            android:progressBackgroundTint="@color/white_200" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="100%"
                            android:textSize="12sp"
                            android:textColor="@color/purple_card_text_secondary" />

                        <TextView
                            android:id="@+id/ttsVolumeValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="100%"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginStart="12dp"
                            android:minWidth="40dp"
                            android:gravity="center"
                            android:textColor="@color/white_100" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Language & Voice Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:background="@drawable/gradient_card_subtle_right">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="🌍 Language &amp; Voice"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/purple_card_text_primary"
                        android:layout_marginBottom="12dp" />

                    <!-- Language Section -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Language &amp; Region"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp"
                        android:textColor="@color/purple_card_text_primary" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Choose the language and accent. This uses the default voice for that region."
                        android:textSize="14sp"
                        android:textColor="@color/purple_card_text_secondary"
                        android:layout_marginBottom="8dp" />

                    <Spinner
                        android:id="@+id/languageSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:minHeight="48dp"
                        android:background="@drawable/dropdown_background"
                        android:popupBackground="?attr/colorSurface"
                        android:padding="12dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Most users only need to change this setting."
                        android:textSize="13sp"
                        android:textColor="@color/white_100"
                        android:layout_marginBottom="16dp"
                        android:layout_marginTop="-4dp"
                        android:background="?android:attr/selectableItemBackground"
                        android:padding="8dp" />

                    <!-- TTS Language Section -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="TTS Language"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp"
                        android:textColor="@color/purple_card_text_primary" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Choose the language for app phrases (like 'notified you:'). This is separate from the TTS engine language above."
                        android:textSize="14sp"
                        android:textColor="@color/purple_card_text_secondary"
                        android:layout_marginBottom="8dp" />

                    <Spinner
                        android:id="@+id/ttsLanguageSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:minHeight="48dp"
                        android:background="@drawable/dropdown_background"
                        android:popupBackground="?attr/colorSurface"
                        android:padding="12dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="This controls phrases like 'notified you:' and 'An app'. Set to match your preferred TTS language."
                        android:textSize="13sp"
                        android:textColor="@color/white_100"
                        android:layout_marginBottom="16dp"
                        android:layout_marginTop="-4dp"
                        android:background="?android:attr/selectableItemBackground"
                        android:padding="8dp" />

                    <!-- Translation Assistance Section -->
                    <LinearLayout
                        android:id="@+id/cardTranslationHelp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="12dp"
                        android:layout_marginBottom="16dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_info_24"
                            android:contentDescription="Info"
                            android:layout_marginEnd="12dp"
                            app:tint="@color/white_100" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Help Translate SpeakThat!"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="@color/purple_card_text_primary" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tap to send translation email"
                                android:textSize="12sp"
                                android:textColor="@color/purple_card_text_secondary"
                                android:layout_marginTop="2dp" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="›"
                            android:textSize="20sp"
                            android:textColor="@color/white_100" />

                    </LinearLayout>

                    <!-- Advanced Options Toggle -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Show Advanced Voice Options"
                            android:textSize="14sp"
                            android:textColor="@color/purple_card_text_secondary"
                            android:layout_marginEnd="8dp" />
                        <com.google.android.material.materialswitch.MaterialSwitch
                            android:id="@+id/switchAdvancedVoice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="false"
                            android:thumbTint="@color/switch_thumb_color"
                            android:trackTint="@color/switch_track_color"
                            app:thumbTint="@color/switch_thumb_color"
                            app:trackTint="@color/switch_track_color" />
                    </LinearLayout>

                    <!-- Advanced Voice Picker Section (initially hidden) -->
                    <LinearLayout
                        android:id="@+id/layoutAdvancedVoiceSection"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/bg_advanced_voice_section"
                        android:padding="16dp"
                        android:layout_marginBottom="16dp"
                        android:layout_marginTop="8dp"
                        android:visibility="gone">

                        <!-- Advanced Label and Divider -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="8dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="⚙️ Advanced"
                                android:textStyle="bold"
                                android:textColor="@color/white_100"
                                android:textSize="16sp"
                                android:layout_marginEnd="8dp" />
                            <View
                                android:layout_width="0dp"
                                android:layout_height="1dp"
                                android:layout_weight="1"
                                android:background="@color/white_100" />
                        </LinearLayout>

                        <!-- Voice Section -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Specific Voice (Advanced)"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="4dp"
                            android:textColor="@color/purple_card_text_primary" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="8dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Select a specific voice engine. This overrides the language setting above. ⚠️ For advanced users only."
                                android:textSize="14sp"
                                android:textColor="@color/purple_card_text_secondary" />

                            <ImageView
                                android:id="@+id/btnVoiceInfo"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/help_24px"
                                android:contentDescription="More Info"
                                android:clickable="true"
                                android:focusable="true"
                                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                                android:padding="4dp"
                                android:layout_marginStart="8dp"
                                android:tint="@color/white_100" />

                        </LinearLayout>

                        <!-- Multi-Language Warning -->
                        <LinearLayout
                            android:id="@+id/multiLanguageWarning"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:background="?android:attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true"
                            android:padding="8dp"
                            android:layout_marginBottom="8dp">

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/ic_info_24"
                                android:contentDescription="Warning"
                                android:layout_marginEnd="8dp"
                                app:tint="@color/white_100" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/specific_voice_warning"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:textColor="@color/white_100" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tap for details"
                                android:textSize="10sp"
                                android:textColor="@color/purple_card_text_secondary" />

                        </LinearLayout>

                        <Spinner
                            android:id="@+id/voiceSpinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:minHeight="48dp"
                            android:background="@drawable/spinner_background"
                            android:popupBackground="?attr/colorSurface"
                            android:padding="12dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="💡 Recommendation: Try the Language setting first. Only use Specific Voice if you need a particular voice engine.\n\nYou can always reset your settings below if you run into trouble!"
                            android:textSize="14sp"
                            android:textColor="@color/purple_card_text_secondary"
                            android:background="?android:attr/selectableItemBackground"
                            android:padding="12dp"
                            android:layout_marginBottom="24dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="You can always reset your settings below if you run into trouble!"
                            android:textSize="13sp"
                            android:textColor="@color/purple_card_text_secondary"
                            android:layout_marginBottom="8dp"
                            android:background="?android:attr/selectableItemBackground"
                            android:padding="8dp" />
                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Audio Output Settings Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:background="@drawable/gradient_card_subtle_right">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="🔊 Audio Output Settings"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/purple_card_text_primary"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Configure how notifications are played through your device's audio system."
                        android:textSize="14sp"
                        android:textColor="@color/purple_card_text_secondary"
                        android:layout_marginBottom="16dp" />

                    <!-- Audio Usage -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Audio Stream Type"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"
                        android:textColor="@color/purple_card_text_primary" />

                    <Spinner
                        android:id="@+id/audioUsageSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:minHeight="48dp"
                        android:background="@drawable/spinner_background"
                        android:popupBackground="?attr/colorSurface"
                        android:padding="12dp" />

                    <!-- Content Type -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Content Type"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp"
                        android:textColor="@color/purple_card_text_primary" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tells the system what kind of audio this is. Speech is recommended for notifications."
                        android:textSize="14sp"
                        android:textColor="@color/purple_card_text_secondary"
                        android:layout_marginBottom="8dp" />

                    <Spinner
                        android:id="@+id/contentTypeSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:minHeight="48dp"
                        android:background="@drawable/spinner_background"
                        android:popupBackground="?attr/colorSurface"
                        android:padding="12dp" />

                    <!-- Audio Channel Help Text -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="?android:attr/selectableItemBackground"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="💡 We recommend: Notification + Speech"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/purple_card_text_secondary" />

                        <ImageView
                            android:id="@+id/btnAudioHelp"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/help_24px"
                            android:contentDescription="More Info"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?android:attr/selectableItemBackgroundBorderless"
                            android:padding="4dp"
                            android:tint="@color/white_100" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Preview & Actions Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:background="@drawable/gradient_card_subtle_right">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="🎵 Preview &amp; Actions"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/purple_card_text_primary"
                        android:layout_marginBottom="12dp" />

                    <!-- Preview Section -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Preview"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"
                        android:textColor="@color/purple_card_text_primary" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="24dp"
                        android:background="@drawable/bg_advanced_voice_section"
                        android:padding="4dp">

                        <Button
                            android:id="@+id/previewButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="🔊 Test Voice Settings"
                            android:textSize="16sp"
                            android:textColor="@color/white_100"
                            android:background="@android:color/transparent"
                            android:padding="16dp"
                            style="@style/Widget.Material3.Button.TextButton" />

                    </LinearLayout>

                    <!-- Action Button -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_advanced_voice_section"
                            android:padding="4dp">

                            <Button
                                android:id="@+id/resetButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Reset to Defaults"
                                android:textSize="16sp"
                                android:textColor="@color/white_100"
                                android:background="@android:color/transparent"
                                android:padding="12dp"
