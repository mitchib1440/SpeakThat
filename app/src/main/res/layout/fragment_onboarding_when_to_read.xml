<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="?attr/colorBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="24dp">

        <!-- Icon -->
        <ImageView
            android:id="@+id/iconTop"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:src="@drawable/ic_rules_24"
            android:tint="@color/white_100"
            android:layout_marginBottom="24dp"
            android:contentDescription="@string/onboarding_when_to_read_icon_description" />

        <!-- Title -->
        <TextView
            android:id="@+id/textTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/onboarding_when_to_read_title"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/white_100"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <!-- Subheading -->
        <TextView
            android:id="@+id/textSubheading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/onboarding_when_to_read_subheading"
            android:textSize="16sp"
            android:textColor="@color/white_200"
            android:gravity="center"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="24dp" />

        <!-- Main Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@android:color/transparent"
            app:strokeWidth="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:background="@drawable/gradient_card_purple_subtle">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/onboarding_when_to_read_card_title"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/purple_card_text_primary"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/onboarding_when_to_read_card_description"
                    android:textSize="16sp"
                    android:textColor="@color/purple_card_text_secondary"
                    android:lineSpacingExtra="2dp"
                    android:layout_marginBottom="20dp" />

                <!-- Template 1: Headphones -->
                <LinearLayout
                    android:id="@+id/templateHeadphones"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="?attr/selectableItemBackground"
                    android:padding="12dp"
                    android:layout_marginBottom="8dp"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_bluetooth_24"
                        android:tint="@color/white_100"
                        android:layout_marginEnd="16dp"
                        android:contentDescription="@string/onboarding_template_headphones_title" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/onboarding_template_headphones_title"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="@color/purple_card_text_primary" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/onboarding_template_headphones_description"
                            android:textSize="13sp"
                            android:textColor="@color/purple_card_text_secondary"
                            android:layout_marginTop="2dp" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/iconHeadphonesStatus"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_arrow_right_24"
                        android:tint="@color/white_200"
                        android:layout_marginStart="8dp"
                        android:contentDescription="@string/onboarding_template_status_tap" />

                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/white_200"
                    android:alpha="0.15"
                    android:layout_marginBottom="8dp" />

                <!-- Template 2: Screen Off -->
                <LinearLayout
                    android:id="@+id/templateScreenOff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="?attr/selectableItemBackground"
                    android:padding="12dp"
                    android:layout_marginBottom="8dp"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_backlight_24"
                        android:tint="@color/white_100"
                        android:layout_marginEnd="16dp"
                        android:contentDescription="@string/onboarding_template_screen_off_title" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/onboarding_template_screen_off_title"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="@color/purple_card_text_primary" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/onboarding_template_screen_off_description"
                            android:textSize="13sp"
                            android:textColor="@color/purple_card_text_secondary"
                            android:layout_marginTop="2dp" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/iconScreenOffStatus"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_arrow_right_24"
                        android:tint="@color/white_200"
                        android:layout_marginStart="8dp"
                        android:contentDescription="@string/onboarding_template_status_tap" />

                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/white_200"
                    android:alpha="0.15"
                    android:layout_marginBottom="8dp" />

                <!-- Template 3: Time Schedule -->
                <LinearLayout
                    android:id="@+id/templateTimeSchedule"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="?attr/selectableItemBackground"
                    android:padding="12dp"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_calclock_24"
                        android:tint="@color/white_100"
                        android:layout_marginEnd="16dp"
                        android:contentDescription="@string/onboarding_template_time_schedule_title" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/onboarding_template_time_schedule_title"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="@color/purple_card_text_primary" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/onboarding_template_time_schedule_description"
                            android:textSize="13sp"
                            android:textColor="@color/purple_card_text_secondary"
                            android:layout_marginTop="2dp" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/iconTimeScheduleStatus"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_arrow_right_24"
                        android:tint="@color/white_200"
                        android:layout_marginStart="8dp"
                        android:contentDescription="@string/onboarding_template_status_tap" />

                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>
