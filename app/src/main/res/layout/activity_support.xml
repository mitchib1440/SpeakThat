<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/colorBackground"
    android:fitsSystemWindows="true"
    tools:context=".SupportActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Introduction Card (Section 1) -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:background="@drawable/gradient_card_subtle_right">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="16dp"
                            android:src="@drawable/ic_send_24"
                            android:tint="@color/white_100"
                            android:contentDescription="@string/support_request" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/support_request"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/purple_card_text_primary" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/support_intro_title"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/purple_card_text_primary"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/support_intro_message"
                        android:textSize="14sp"
                        android:textColor="@color/purple_card_text_secondary"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/support_intro_details"
                        android:textSize="14sp"
                        android:textColor="@color/purple_card_text_secondary" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Support Type Selection (Section 2) -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:background="@drawable/gradient_card_subtle_right">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/support_type"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/purple_card_text_primary"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/support_type_description"
                        android:textSize="14sp"
                        android:textColor="@color/purple_card_text_secondary"
                        android:layout_marginBottom="12dp" />

                    <Spinner
                        android:id="@+id/spinnerSupportType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="48dp"
                        android:background="@drawable/spinner_background"
                        android:popupBackground="@drawable/spinner_popup_background" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Dynamic Questions Card (Section 3) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardQuestions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:id="@+id/layoutQuestions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:background="@drawable/gradient_card_subtle_right">

                    <!-- Questions will be dynamically added here -->

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Submit Section (Section 4) -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:background="@drawable/gradient_card_subtle_right">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/support_submit"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/purple_card_text_primary"
                        android:layout_marginBottom="12dp" />

                    <!-- Event Logs Toggle (for General Support only) -->
                    <LinearLayout
                        android:id="@+id/layoutIncludeLogs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="12dp"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/support_include_logs"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/purple_card_text_primary" />

                            <TextView
                                android:id="@+id/textLogInfo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/support_log_info"
                                android:textSize="14sp"
                                android:textColor="@color/purple_card_text_secondary"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                        <com.google.android.material.materialswitch.MaterialSwitch
                            android:id="@+id/switchIncludeLogs"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:thumbTint="@color/switch_thumb_color"
                            android:trackTint="@color/switch_track_color"
                            app:thumbTint="@color/switch_thumb_color"
                            app:trackTint="@color/switch_track_color"
                            android:paddingLeft="12dp"/>

                    </LinearLayout>

                    <!-- Event Logs Message (for Bug Reports and Feature Requests) -->
                    <TextView
                        android:id="@+id/textLogMessage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/purple_card_text_secondary"
                        android:layout_marginBottom="12dp"
                        android:visibility="gone" />

                    <!-- Validation Warning -->
                    <TextView
                        android:id="@+id/textValidationWarning"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/support_validation_warning"
                        android:textSize="14sp"
                        android:textColor="@color/white_100"
                        android:layout_marginBottom="12dp"
                        android:visibility="gone" />

                    <!-- Submit Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSubmit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/support_send_via_email"
                        android:textColor="@color/white_100"
                        android:backgroundTint="@color/purple_100"
                        android:padding="16dp"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:cornerRadius="8dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
