<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="vertical"
    android:fadeScrollbars="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="24dp">

        <!-- Icon -->
        <ImageView
            android:id="@+id/iconImage"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_marginBottom="24dp"
            android:src="@drawable/ic_uk_24"
            android:contentDescription="@string/onboarding_language_icon_description"
            app:tint="@android:color/white" />

        <!-- Title -->
        <TextView
            android:id="@+id/textTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/onboarding_language_title"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/white_100"
            android:gravity="center"
            android:layout_marginBottom="12dp" />

        <!-- Subtitle -->
        <TextView
            android:id="@+id/textSubtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/onboarding_language_subtitle"
            android:textSize="16sp"
            android:textColor="@color/white_200"
            android:gravity="center"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="32dp" />

        <!-- Language Selection Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@android:color/transparent"
            app:strokeWidth="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:background="@drawable/gradient_card_subtle_right">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/onboarding_language_card_title"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/purple_card_text_primary"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/onboarding_language_card_description"
                    android:textSize="14sp"
                    android:textColor="@color/purple_card_text_secondary"
                    android:lineSpacingExtra="2dp"
                    android:layout_marginBottom="16dp" />

                <Spinner
                    android:id="@+id/languagePresetSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="56dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:background="@drawable/dropdown_background"
                    android:popupBackground="@drawable/dropdown_background" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Info Box Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@android:color/transparent"
            app:strokeWidth="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:background="@drawable/gradient_card_subtle_right">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/info_24px"
                        android:layout_marginEnd="12dp"
                        android:contentDescription="@string/info_icon_description"
                        app:tint="@color/purple_card_text_primary" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/onboarding_language_info_title"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/purple_card_text_primary" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/onboarding_language_info_description"
                    android:textSize="14sp"
                    android:textColor="@color/purple_card_text_secondary"
                    android:lineSpacingExtra="2dp"
                    android:layout_marginBottom="16dp" />

                <!-- External Link Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonTranslate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/onboarding_language_translate_button"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:background="@android:color/white"
                    app:cornerRadius="8dp"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="12dp"
                    app:icon="@drawable/ic_open_in_new_tab_24"
                    app:iconTint="@android:color/black"
                    app:iconGravity="end"
                    style="@style/Widget.Material3.Button" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>
