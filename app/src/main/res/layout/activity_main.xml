<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="?android:attr/windowBackground"
    tools:context=".MainActivity"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- App Logo -->
        <ImageView
            android:id="@+id/logoSpeakThat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_speakthat"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"
            android:contentDescription="@string/app_name"
            android:layout_marginTop="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp" />

        <!-- Master Control Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardMasterControl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="?attr/colorSurface"
            app:strokeColor="@color/brand_primary_light"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Master Switch Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ”Š SpeakThat Active"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="?android:attr/textColorPrimary" />

                        <TextView
                            android:id="@+id/textMasterSwitchStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tap to enable notification reading"
                            android:textSize="14sp"
                            android:textColor="?android:attr/textColorSecondary"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchMasterControl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:checked="false"
                        app:thumbTint="@color/brand_primary"
                        app:trackTint="@color/brand_primary_light" />

                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/brand_primary_light"
                    android:layout_marginBottom="16dp" />

                <!-- Status Section -->
                <TextView
                    android:id="@+id/textServiceStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/service_disabled"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/red_500"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/textPermissionStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/permission_description"
                    android:textSize="14sp"
                    android:textColor="?android:attr/textColorSecondary" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Enable Permission Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonEnablePermission"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/open_settings"
            android:layout_marginTop="24dp" />

        <!-- Settings Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings"
            android:layout_marginTop="16dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:strokeColor="@color/brand_primary"
            android:textColor="@color/brand_primary" />

    </LinearLayout>
</ScrollView> 