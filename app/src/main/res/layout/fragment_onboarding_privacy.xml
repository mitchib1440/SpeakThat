<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="vertical"
    android:fadeScrollbars="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="24dp">

        <!-- Icon -->
        <ImageView
            android:id="@+id/iconImage"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_marginBottom="24dp"
            android:src="@drawable/ic_shield_lock_24"
            android:contentDescription="@string/onboarding_privacy_icon_description"
            app:tint="@android:color/white" />

        <!-- Title -->
        <TextView
            android:id="@+id/textTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/onboarding_privacy_title_new"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/white_100"
            android:gravity="center"
            android:layout_marginBottom="12dp" />

        <!-- Subtitle -->
        <TextView
            android:id="@+id/textSubtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/onboarding_privacy_subtitle"
            android:textSize="16sp"
            android:textColor="@color/white_200"
            android:gravity="center"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="32dp" />

        <!-- First Card: Sensitive Notifications -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@android:color/transparent"
            app:strokeWidth="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:background="@drawable/gradient_card_subtle_right">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/onboarding_privacy_card1_title"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/purple_card_text_primary"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/onboarding_privacy_card1_description"
                    android:textSize="14sp"
                    android:textColor="@color/purple_card_text_secondary"
                    android:lineSpacingExtra="2dp"
                    android:layout_marginBottom="12dp" />

                <!-- Bullet points -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/onboarding_privacy_card1_bullet1"
                    android:textSize="14sp"
                    android:textColor="@color/purple_card_text_secondary"
                    android:lineSpacingExtra="2dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/onboarding_privacy_card1_bullet2"
                    android:textSize="14sp"
                    android:textColor="@color/purple_card_text_secondary"
                    android:lineSpacingExtra="2dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/onboarding_privacy_card1_bullet3"
                    android:textSize="14sp"
                    android:textColor="@color/purple_card_text_secondary"
                    android:lineSpacingExtra="2dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/onboarding_privacy_card1_bullet4"
                    android:textSize="14sp"
                    android:textColor="@color/purple_card_text_secondary"
                    android:lineSpacingExtra="2dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/onboarding_privacy_card1_bullet5"
                    android:textSize="14sp"
                    android:textColor="@color/purple_card_text_secondary"
                    android:lineSpacingExtra="2dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/onboarding_privacy_card1_conclusion"
                    android:textSize="14sp"
                    android:textColor="@color/purple_card_text_secondary"
                    android:textStyle="bold"
                    android:lineSpacingExtra="2dp"
                    android:layout_marginTop="12dp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Second Card: Data Collection -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@android:color/transparent"
            app:strokeWidth="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:background="@drawable/gradient_card_subtle_right">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/onboarding_privacy_card2_title"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/purple_card_text_primary"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/onboarding_privacy_card2_description"
                    android:textSize="14sp"
                    android:textColor="@color/purple_card_text_secondary"
                    android:lineSpacingExtra="2dp"
                    android:layout_marginBottom="16dp" />

                <!-- Privacy Policy Button -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/bg_advanced_voice_section"
                    android:paddingStart="16dp"
                    android:paddingEnd="8dp"
                    android:paddingVertical="12dp"
                    android:layout_marginTop="8dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/info_24px"
                                android:layout_marginEnd="8dp"
                                android:contentDescription="@string/info_icon_description"
                                app:tint="@color/purple_card_text_primary" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/onboarding_privacy_policy_title"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="@color/purple_card_text_primary" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/onboarding_privacy_policy_description"
                            android:textSize="12sp"
                            android:textColor="@color/purple_card_text_secondary"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                    <ImageButton
                        android:id="@+id/buttonPrivacyPolicy"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_open_in_new_tab_24"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="@string/onboarding_privacy_policy_button"
                        app:tint="@color/purple_card_text_primary" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>
