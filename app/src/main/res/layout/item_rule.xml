<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@android:color/transparent"
    app:strokeWidth="0dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/gradient_card_subtle_right">

        <!-- Rule Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textRuleName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rule Name"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/purple_card_text_primary" />

                <TextView
                    android:id="@+id/textRuleSummary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rule summary"
                    android:textSize="14sp"
                    android:textColor="@color/purple_card_text_secondary"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/switchRuleEnabled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:thumbTint="@color/switch_thumb_color"
                android:trackTint="@color/switch_track_color"
                app:thumbTint="@color/switch_thumb_color"
                app:trackTint="@color/switch_track_color"
                android:layout_marginEnd="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonDeleteRule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:padding="8dp"
                app:icon="@drawable/ic_delete_24"
                app:iconSize="20dp"
                app:iconTint="@color/white_100"
                style="@style/Widget.Material3.Button.IconButton" />

        </LinearLayout>

        <!-- Rule Details -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp">

            <!-- Natural Language Rule Description -->
            <TextView
                android:id="@+id/textRuleDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="When screen is on, Quiet Hours will skip reading notifications"
                android:textSize="14sp"
                android:textColor="@color/purple_card_text_secondary"
                android:lineSpacingExtra="2dp"
                android:lineSpacingMultiplier="1.1" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView> 