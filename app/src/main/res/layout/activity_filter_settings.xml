<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?android:attr/windowBackground"
    android:fitsSystemWindows="true"
    tools:context=".FilterSettingsActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/brand_primary"
        android:theme="@style/ThemeOverlay.Material3.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.Material3.Light">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Filter Settings"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

    </androidx.appcompat.widget.Toolbar>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- App List Filtering Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="?attr/colorSurface"
                app:strokeColor="@color/brand_primary_light"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“± App List Filtering"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="?android:attr/textColorPrimary"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Control which apps can trigger notifications"
                        android:textSize="14sp"
                        android:textColor="?android:attr/textColorSecondary"
                        android:layout_marginBottom="16dp" />

                    <!-- App List Mode Selection -->
                    <RadioGroup
                        android:id="@+id/appListModeGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp">

                        <RadioButton
                            android:id="@+id/radioNone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="No app filtering"
                            android:checked="true" />

                        <RadioButton
                            android:id="@+id/radioWhitelist"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Whitelist (only selected apps)"
                            android:layout_marginTop="8dp" />

                        <RadioButton
                            android:id="@+id/radioBlacklist"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Blacklist (exclude selected apps)"
                            android:layout_marginTop="8dp" />

                    </RadioGroup>

                    <!-- App List Management -->
                    <LinearLayout
                        android:id="@+id/appListSection"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Manage Apps:"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp" />

                        <!-- App List Header (Collapsible) -->
                        <LinearLayout
                            android:id="@+id/appListHeader"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:background="?android:attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true"
                            android:padding="8dp"
                            android:layout_marginBottom="8dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="ðŸ“‹ App List"
                                android:textStyle="bold"
                                android:textSize="16sp"
                                android:textColor="?android:attr/textColorPrimary" />

                            <TextView
                                android:id="@+id/txtAppListCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(0 apps)"
                                android:textSize="12sp"
                                android:textColor="?android:attr/textColorSecondary"
                                android:layout_marginEnd="8dp" />

                                                            <ImageView
                                    android:id="@+id/iconAppList"
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@android:drawable/arrow_up_float"
                                    android:contentDescription="Toggle app list" />

                        </LinearLayout>

                        <!-- App List Content -->
                        <LinearLayout
                            android:id="@+id/appListContent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="visible">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginBottom="12dp">

                                <!-- App Search Section -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginBottom="8dp">

                                    <com.google.android.material.textfield.TextInputLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:layout_marginEnd="8dp"
                                        app:boxBackgroundMode="outline"
                                        app:boxStrokeColor="@color/brand_primary">

                                        <AutoCompleteTextView
                                            android:id="@+id/editAppName"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:minHeight="56dp"
                                            android:hint="Search apps or enter package name"
                                            android:inputType="text"
                                            android:completionThreshold="1"
                                            android:dropDownHeight="200dp"
                                            android:textSize="16sp"
                                            android:paddingStart="16dp"
                                            android:paddingEnd="16dp"
                                            android:paddingTop="16dp"
                                            android:paddingBottom="16dp" />

                                    </com.google.android.material.textfield.TextInputLayout>

                                    <com.google.android.material.button.MaterialButton
                                        android:id="@+id/btnAddApp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Add"
                                        android:backgroundTint="@color/brand_primary"
                                        android:textColor="@color/white" />

                                </LinearLayout>

                                <!-- Manual Entry Option -->
                                <TextView
                                    android:id="@+id/txtAppFilterHelp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="ðŸ’¡ Search through thousands of apps by name, package, or category. Click a suggestion to add it instantly. (Tap for more info)"
                                    android:textSize="12sp"
                                    android:textColor="?android:attr/textColorPrimary"
                                    android:background="?android:attr/selectableItemBackground"
                                    android:padding="4dp"
                                    android:layout_marginBottom="8dp"
                                    android:clickable="true"
                                    android:focusable="true" />

                            </LinearLayout>

                            <!-- App List -->
                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/recyclerAppList"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:nestedScrollingEnabled="false" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Word Blacklist Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="?attr/colorSurface"
                app:strokeColor="@color/brand_primary_light"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸš« Word Blacklist"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="?android:attr/textColorPrimary"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Block or privatize notifications containing specific words"
                        android:textSize="14sp"
                        android:textColor="?android:attr/textColorSecondary"
                        android:layout_marginBottom="16dp" />

                    <!-- Word Blacklist Header (Collapsible) -->
                    <LinearLayout
                        android:id="@+id/blacklistHeader"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="8dp"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="ðŸ“‹ Blacklisted Words"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="?android:attr/textColorPrimary" />

                        <TextView
                            android:id="@+id/txtBlacklistCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="(0 words)"
                            android:textSize="12sp"
                            android:textColor="?android:attr/textColorSecondary"
                            android:layout_marginEnd="8dp" />

                                                    <ImageView
                                android:id="@+id/iconBlacklist"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@android:drawable/arrow_up_float"
                                android:contentDescription="Toggle blacklist" />

                    </LinearLayout>

                    <!-- Word Blacklist Content -->
                    <LinearLayout
                        android:id="@+id/blacklistContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <!-- Add Word -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="12dp">

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginEnd="8dp"
                                app:boxBackgroundMode="outline"
                                app:boxStrokeColor="@color/brand_primary">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/editBlacklistWord"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Word to blacklist"
                                    android:inputType="text" />

                            </com.google.android.material.textfield.TextInputLayout>

                            <Spinner
                                android:id="@+id/spinnerBlacklistType"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="8dp"
                                android:minWidth="100dp" />

                        </LinearLayout>

                        <!-- Word Blacklist -->

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnAddBlacklistWord"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/brand_primary"
                            android:text="Add"
                            android:textColor="@color/white" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerBlacklistWords"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="50dp"
                            android:nestedScrollingEnabled="true" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Word Replacement Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="?attr/colorSurface"
                app:strokeColor="@color/brand_primary_light"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ”„ Word Replacement"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="?android:attr/textColorPrimary"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Replace words in notifications for censoring or pronunciation fixes"
                        android:textSize="14sp"
                        android:textColor="?android:attr/textColorSecondary"
                        android:layout_marginBottom="16dp" />

                    <!-- Word Replacement Header (Collapsible) -->
                    <LinearLayout
                        android:id="@+id/replacementHeader"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="8dp"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="ðŸ“‹ Word Replacements"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="?android:attr/textColorPrimary" />

                        <TextView
                            android:id="@+id/txtReplacementCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="(0 replacements)"
                            android:textSize="12sp"
                            android:textColor="?android:attr/textColorSecondary"
                            android:layout_marginEnd="8dp" />

                                                    <ImageView
                                android:id="@+id/iconReplacement"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@android:drawable/arrow_up_float"
                                android:contentDescription="Toggle replacements" />

                    </LinearLayout>

                    <!-- Word Replacement Content -->
                    <LinearLayout
                        android:id="@+id/replacementContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <!-- Add Word Replacement -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="12dp">

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginEnd="8dp"
                                app:boxBackgroundMode="outline"
                                app:boxStrokeColor="@color/brand_primary">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/editReplaceFrom"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Word to replace"
                                    android:inputType="text" />

                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginEnd="8dp"
                                app:boxBackgroundMode="outline"
                                app:boxStrokeColor="@color/brand_primary">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/editReplaceTo"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Replace with (leave empty to remove)"
                                    android:inputType="text" />

                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnAddReplacement"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Add"
                                android:backgroundTint="@color/brand_primary"
                                android:textColor="@color/white" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ’¡ Tip: Use lowercase for case-insensitive matching. Leave 'Replace with' empty to remove words entirely."
                            android:textSize="12sp"
                            android:textColor="?android:attr/textColorPrimary"
                            android:layout_marginBottom="12dp" />

                        <!-- Word Replacements -->
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerWordReplacements"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:nestedScrollingEnabled="false" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Media Notification Filtering Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="?attr/colorSurface"
                app:strokeColor="@color/brand_primary_light"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸŽµ Media Notification Filtering"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="?android:attr/textColorPrimary"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Automatically filter out media playback controls while preserving important notifications"
                        android:textSize="14sp"
                        android:textColor="?android:attr/textColorSecondary"
                        android:layout_marginBottom="16dp" />

                    <!-- Enable Media Filtering -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp"
                        android:gravity="center_vertical">

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/switchMediaFiltering"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Enable media notification filtering"
                            android:textSize="16sp"
                            android:textColor="?android:attr/textColorPrimary" />

                    </LinearLayout>

                    <!-- Media Filtering Options -->
                    <LinearLayout
                        android:id="@+id/mediaFilteringSection"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <!-- Advanced Options (Collapsible) -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="16dp">

                            <LinearLayout
                                android:id="@+id/advancedOptionsHeader"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:background="?android:attr/selectableItemBackground"
                                android:clickable="true"
                                android:focusable="true"
                                android:padding="8dp">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="âš™ï¸ Advanced Options"
                                    android:textStyle="bold"
                                    android:textSize="16sp"
                                    android:textColor="?android:attr/textColorPrimary" />

                                <ImageView
                                    android:id="@+id/iconAdvancedOptions"
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@android:drawable/arrow_down_float"
                                    android:contentDescription="Toggle advanced options" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/advancedOptionsContent"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:visibility="gone">

                                <!-- Exception Apps -->
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Exception Apps:"
                                    android:textStyle="bold"
                                    android:layout_marginBottom="8dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Apps that should never have notifications filtered (like YouTube for replies)"
                                    android:textSize="12sp"
                                    android:textColor="?android:attr/textColorSecondary"
                                    android:layout_marginBottom="8dp" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginBottom="12dp">

                                    <com.google.android.material.textfield.TextInputLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:layout_marginEnd="8dp"
                                        app:boxBackgroundMode="outline"
                                        app:boxStrokeColor="@color/brand_primary">

                                        <AutoCompleteTextView
                                            android:id="@+id/editMediaExceptedApp"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:minHeight="56dp"
                                            android:hint="Search apps or enter package name"
                                            android:inputType="text"
                                            android:completionThreshold="1"
                                            android:dropDownHeight="200dp"
                                            android:textSize="16sp"
                                            android:paddingStart="16dp"
                                            android:paddingEnd="16dp"
                                            android:paddingTop="16dp"
                                            android:paddingBottom="16dp" />

                                    </com.google.android.material.textfield.TextInputLayout>

                                    <com.google.android.material.button.MaterialButton
                                        android:id="@+id/btnAddMediaExceptedApp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Add"
                                        android:backgroundTint="@color/brand_primary"
                                        android:textColor="@color/white" />

                                </LinearLayout>

                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/recyclerMediaExceptedApps"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="16dp"
                                    android:minHeight="50dp"
                                    android:nestedScrollingEnabled="false" />

                                <!-- Important Keywords -->
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Important Keywords:"
                                    android:textStyle="bold"
                                    android:layout_marginBottom="8dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Words that indicate important notifications (like 'reply', 'comment')"
                                    android:textSize="12sp"
                                    android:textColor="?android:attr/textColorSecondary"
                                    android:layout_marginBottom="8dp" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginBottom="12dp">

                                    <com.google.android.material.textfield.TextInputLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:layout_marginEnd="8dp"
                                        app:boxBackgroundMode="outline"
                                        app:boxStrokeColor="@color/brand_primary">

                                        <com.google.android.material.textfield.TextInputEditText
                                            android:id="@+id/editMediaImportantKeyword"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:hint="Important keyword (e.g., reply, comment)"
                                            android:inputType="text" />

                                    </com.google.android.material.textfield.TextInputLayout>

                                    <com.google.android.material.button.MaterialButton
                                        android:id="@+id/btnAddMediaImportantKeyword"
                                        android:layout_width="wrap_content"
