<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/colorBackground"
    android:fitsSystemWindows="true">

    <!-- ViewPager2 for onboarding pages -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Page indicator -->
    <LinearLayout
        android:id="@+id/pageIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        android:padding="8dp" />

    <!-- Bottom Navigation Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Back Button (Left) -->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_card_subtle_right">

            <ImageButton
                android:id="@+id/buttonBack"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_arrow_left_24"
                android:background="@android:color/transparent"
                android:contentDescription="@string/onboarding_back_button"
                app:tint="@color/white_100" />

        </FrameLayout>

        <!-- Spacer -->
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <!-- Mute Button (Center Left) -->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:background="@drawable/gradient_card_subtle_right">

            <ImageButton
                android:id="@+id/buttonMute"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_volume_up_24"
                android:background="@android:color/transparent"
                android:contentDescription="@string/onboarding_mute_button"
                app:tint="@color/white_100" />

        </FrameLayout>

        <!-- Skip Button (Center Right) -->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:background="@drawable/gradient_card_subtle_right">

            <ImageButton
                android:id="@+id/buttonSkip"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_last_page_24"
                android:background="@android:color/transparent"
                android:contentDescription="@string/onboarding_skip_button"
                app:tint="@color/white_100" />

        </FrameLayout>

        <!-- Spacer -->
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <!-- Forward Button (Right) -->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_card_subtle_right">

            <ImageButton
                android:id="@+id/buttonNext"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_arrow_right_24"
                android:background="@android:color/transparent"
                android:contentDescription="@string/onboarding_next_button"
                app:tint="@color/white_100" />

        </FrameLayout>

    </LinearLayout>

</LinearLayout> 