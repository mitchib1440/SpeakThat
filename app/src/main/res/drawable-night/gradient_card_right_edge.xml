<?xml version="1.0" encoding="utf-8"?>
<!-- Right-edge gradient with varied positioning -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base purple background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/purple_base" />
            <corners android:radius="12dp" />
        </shape>
    </item>
    
    <!-- Radial gradient positioned at right edge -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:centerX="0.85"
                android:centerY="0.5"
                android:gradientRadius="180dp"
                android:startColor="@color/white_overlay_12"
                android:endColor="@color/transparent" />
            <corners android:radius="12dp" />
        </shape>
    </item>
</layer-list>
